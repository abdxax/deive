<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="412dp"
        android:layout_height="540dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignBaseline="@+id/etphone"
            android:layout_alignBottom="@+id/etphone"
            android:layout_alignEnd="@+id/bLoginLa"
            android:layout_alignRight="@+id/bLoginLa"
            android:paddingLeft="15dp"
            android:text="Name" />

        <EditText
            android:id="@+id/etphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView31"
            android:layout_toRightOf="@+id/textView31"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />


        <EditText

            android:id="@+id/etID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView30"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/textView30"
            android:layout_toRightOf="@+id/textView30"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etID"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:onClick="buClick"
            android:text="LOGIN" />

        <Button
            android:id="@+id/bLoginLa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bLogin"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/bLogin"
            android:layout_toStartOf="@+id/bLogin"
            android:onClick="buButton"
            android:text="Button" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/etID"
            android:layout_alignLeft="@+id/textView30"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:text="Password" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etphone"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/tax" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
